<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.izv.dam.newquip">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".vistas.main.VistaQuip">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".vistas.notas.VistaNota">
            <meta-data
                android:name="com.dam.newquip.PARENT_ACTIVITY"
                android:value=".vistas.main.VistaQuip" />
        </activity>
        <activity android:name=".vistas.lugar.VistaLugar"
            android:parentActivityName=".vistas.notas.VistaNota">
            <meta-data
                android:name="com.dam.newquip.PARENT_ACTIVITY"
                android:value=".vistas.main.VistaNota" />
        </activity>
    </application>
</manifest>